{
  "name": "alphanumeric-issue24-ci",
  "version": "1.0.0",
  "private": true,
  "description": "Voice Terminal Hybrid Application",
  "workspaces": [
    "electron-shell",
    "voice-terminal-components/voice-terminal-components",
    "voice-terminal-hybrid"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:staged": "npm run test:staged --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:staged": "npm run lint:staged --workspaces --if-present",
    "format": "prettier --write \"**/*.{js,ts,tsx,svelte,css,md,json}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,svelte,css,md,json}\"",
    "type-check": "npm run type-check --workspaces --if-present",
    "prepare": "husky install",
    "ci:local": "./scripts/pre-push-ci.sh",
    "ci:act": "act",
    "ci:act:main": "act -j detect-changes,voice-terminal-pipeline,electron-pipeline,code-quality",
    "ci:act:voice": "act -j voice-terminal-pipeline",
    "ci:act:electron": "act -j electron-pipeline",
    "ci:act:quality": "act -j code-quality",
    "ci:test": "act --list",
    "ci:list": "./scripts/act-helpers.sh list",
    "ci:jobs": "./scripts/act-helpers.sh jobs",
    "ci:dry-run": "./scripts/act-helpers.sh dry-run",
    "ci:dry-run:push": "./scripts/act-helpers.sh dry-run push",
    "ci:dry-run:pr": "./scripts/act-helpers.sh dry-run pull_request",
    "ci:debug": "./scripts/act-helpers.sh debug",
    "ci:debug:voice": "./scripts/act-helpers.sh debug voice-terminal-pipeline",
    "ci:debug:electron": "./scripts/act-helpers.sh debug electron-pipeline",
    "ci:debug:quality": "./scripts/act-helpers.sh debug code-quality",
    "ci:shell": "./scripts/act-helpers.sh shell",
    "ci:shell:voice": "./scripts/act-helpers.sh shell voice-terminal-pipeline",
    "ci:shell:electron": "./scripts/act-helpers.sh shell electron-pipeline",
    "ci:test:all": "./scripts/act-helpers.sh test-all",
    "ci:test:voice": "./scripts/act-helpers.sh test voice-terminal",
    "ci:test:electron": "./scripts/act-helpers.sh test electron",
    "ci:test:quality": "./scripts/act-helpers.sh test quality",
    "ci:clean": "./scripts/act-helpers.sh clean",
    "ci:status": "./scripts/act-helpers.sh status",
    "ci:help": "./scripts/act-helpers.sh help",
    "ci:push": "act push -e .github/act-events/push.json",
    "ci:pr": "act pull_request -e .github/act-events/pull_request.json",
    "ci:release": "act release -e .github/act-events/release.json",
    "ci:dispatch": "act workflow_dispatch -e .github/act-events/workflow_dispatch.json",
    "ci:schedule": "act schedule -e .github/act-events/schedule.json",
    "audit:security": "npm audit --audit-level moderate",
    "validate:pre-push": "./scripts/pre-push-ci.sh",
    "setup:pre-push": "./scripts/setup-pre-push.sh",
    "optimize": "./scripts/optimize-ci.sh optimize",
    "optimize:quick": "./scripts/optimize-ci.sh restore",
    "optimize:clean": "./scripts/optimize-ci.sh clean",
    "optimize:stats": "./scripts/optimize-ci.sh stats",
    "cache:analyze": "./scripts/cache-manager.sh analyze",
    "cache:cleanup": "./scripts/cache-manager.sh cleanup",
    "cache:validate": "./scripts/cache-manager.sh validate",
    "cache:report": "./scripts/cache-manager.sh report",
    "perf:init": "./scripts/performance-monitor.sh init",
    "perf:monitor": "./scripts/performance-monitor.sh monitor",
    "perf:stats": "./scripts/performance-monitor.sh stats",
    "perf:report": "./scripts/performance-monitor.sh report"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "concurrently": "^8.2.2"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "npm run lint:staged",
      "npm run test:staged"
    ],
    "**/*.{svelte}": [
      "npm run lint:staged:svelte",
      "npm run test:staged"
    ],
    "**/*.{js,ts,tsx,svelte,css,md,json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}