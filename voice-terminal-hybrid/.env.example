# Voice Terminal Hybrid - Environment Configuration

# Database Configuration
# PostgreSQL connection (primary database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=voice_terminal_hybrid
DB_USER=postgres
DB_PASSWORD=your_password

# SQLite Configuration (local fallback/sync source)
SQLITE_DB_PATH=./data/voice-terminal.db

# Development Mode
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# Cloud Sync Configuration (Optional)
# Only required if you want to enable cloud synchronization
# Leave empty to run in offline-only mode

# Supabase Integration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Sync Settings
SYNC_AUTO_ENABLED=false
SYNC_INTERVAL_MINUTES=30
SYNC_BATCH_SIZE=50
SYNC_MAX_RETRIES=3
SYNC_RETRY_DELAY=5000

# Security
JWT_SECRET=your-jwt-secret-key
DEVICE_ID_ENCRYPTION_KEY=your-device-encryption-key

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Performance
MAX_CONCURRENT_SYNCS=3
SYNC_TIMEOUT_MS=300000

# Feature Flags
ENABLE_CLOUD_SYNC=true
ENABLE_DEVICE_MANAGEMENT=true
ENABLE_CONFLICT_RESOLUTION=true
ENABLE_AUTO_RETRY=true