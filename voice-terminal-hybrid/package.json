{
  "name": "voice-terminal-hybrid",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite dev",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:visual": "percy exec -- playwright test tests/visual",
    "test:accessibility": "playwright test --grep='@accessibility'",
    "test:performance": "playwright test --grep='@performance'",
    "test:all": "npm run test && npm run test:e2e",
    "test:db": "vitest run src/database/__tests__",
    "test:db:watch": "vitest watch src/database/__tests__",
    "test:ingestion": "vitest run src/ingestion/__tests__",
    "test:ingestion:watch": "vitest watch src/ingestion/__tests__",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:status": "knex migrate:status",
    "db:seed": "knex seed:run",
    "db:backup": "./src/database/scripts/backup/backup.sh",
    "db:restore": "./src/database/scripts/backup/restore.sh",
    "security:server": "npx tsx src/server/notification-server.ts",
    "security:cli": "npx tsx src/security/cli/security-cli.ts",
    "security:test": "npx tsx src/security/cli/security-cli.ts test",
    "security:generate-key": "npx tsx src/security/cli/security-cli.ts api-key generate",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:serve": "npx http-server storybook-static"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@percy/cli": "^1.27.0",
    "@percy/playwright": "^1.0.0",
    "@playwright/test": "^1.40.0",
    "@storybook/addon-a11y": "^8.0.0",
    "@storybook/addon-actions": "^8.0.0",
    "@storybook/addon-backgrounds": "^8.0.0",
    "@storybook/addon-controls": "^8.0.0",
    "@storybook/addon-docs": "^8.0.0",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-svelte-csf": "^4.1.0",
    "@storybook/addon-viewport": "^8.0.0",
    "@storybook/builder-vite": "^8.0.0",
    "@storybook/svelte": "^8.0.0",
    "@storybook/svelte-vite": "^8.0.0",
    "@storybook/sveltekit": "^8.0.0",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/svelte": "^4.0.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/express": "^5.0.3",
    "@types/supertest": "^6.0.2",
    "@types/tmp": "^0.2.6",
    "@types/ws": "^8.18.1",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "ajv": "^8.12.0",
    "flowbite-svelte": "^0.44.0",
    "jsdom": "^23.0.0",
    "storybook": "^8.0.0",
    "supertest": "^7.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tmp": "^0.2.3",
    "typescript": "^5.0.0",
    "vite": "^5.0.3",
    "vitest": "^1.0.0",
    "ws": "^8.18.0",
    "@types/uuid": "^10.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.3.0",
    "chokidar": "^4.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.0.0",
    "joi": "^18.0.1",
    "nanoid": "^5.1.5",
    "ws": "^8.18.3",
    "@supabase/supabase-js": "^2.45.4",
    "uuid": "^10.0.0",
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "pg-pool": "^3.10.1",
    "bcrypt": "^5.1.1",
    "commander": "^12.1.0",
    "redis": "^4.7.0"
  }
}
