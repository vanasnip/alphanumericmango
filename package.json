{
  "name": "alphanumeric-tts-voice-engine",
  "version": "1.0.0",
  "description": "High-performance Coqui TTS integration for voice terminal applications",
  "main": "dist/src/voice-engine/tts-service.js",
  "types": "dist/src/voice-engine/tts-service.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "validate": "ts-node src/voice-engine/validate-system.ts",
    "validate:staging": "ts-node src/voice-engine/validate-system.ts staging",
    "validate:production": "ts-node src/voice-engine/validate-system.ts production",
    "benchmark": "python3 modules/voice-engine/benchmark.py",
    "performance-test": "python3 modules/voice-engine/validate_performance.py",
    "setup": "npm run setup:python && npm run build",
    "setup:python": "cd modules/voice-engine && pip3 install -r requirements.txt",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "dev": "ts-node src/voice-engine/tts-service.ts",
    "start": "node dist/src/voice-engine/tts-service.js",
    "health-check": "ts-node -e \"import('./src/voice-engine/health-monitor').then(m => m.default.start())\"",
    "export-config": "ts-node -e \"import('./src/voice-engine/config').then(c => console.log(JSON.stringify(c.default.getConfig(), null, 2)))\""
  },
  "keywords": [
    "tts",
    "text-to-speech",
    "coqui",
    "voice-terminal",
    "speech-synthesis",
    "ai",
    "voice",
    "audio"
  ],
  "author": "Alphanumeric",
  "license": "MIT",
  "dependencies": {
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "python": ">=3.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alphanumeric/tts-voice-engine.git"
  },
  "bugs": {
    "url": "https://github.com/alphanumeric/tts-voice-engine/issues"
  },
  "homepage": "https://github.com/alphanumeric/tts-voice-engine#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testTimeout": 30000
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "env": {
      "node": true,
      "es2022": true
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "files": [
    "dist/",
    "modules/",
    "README.md",
    "LICENSE"
  ]
}