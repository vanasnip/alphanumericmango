# Environment variables for act (GitHub Actions local testing)
# Copy this file to .env.ci and fill in your actual values
# WARNING: Never commit .env.ci to version control!

# ==========================================
# GITHUB CONFIGURATION
# ==========================================

# GitHub token for API access (required for many actions)
# Generate at: https://github.com/settings/tokens
# Scopes needed: repo, workflow, read:packages
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# GitHub repository information
GITHUB_REPOSITORY=owner/alphanumeric-issue24-ci
GITHUB_REPOSITORY_OWNER=owner
GITHUB_ACTOR=your-username

# ==========================================
# NODE.JS ENVIRONMENT
# ==========================================

# Node.js version for consistency
NODE_VERSION=18.17.0

# NPM configuration
NPM_CONFIG_CACHE=/tmp/.npm
NPM_CONFIG_FUND=false
NPM_CONFIG_AUDIT=false

# ==========================================
# BUILD CONFIGURATION
# ==========================================

# Build environment
NODE_ENV=test
CI=true

# Workspace configuration for monorepo
WORKSPACE_ROOT=/github/workspace

# ==========================================
# CACHE CONFIGURATION
# ==========================================

# Cache directories
CACHE_DIR=.act-cache
ARTIFACT_DIR=/tmp/act-artifacts

# Cache keys (automatically generated but can be overridden)
CACHE_KEY_PREFIX=act-cache-v1

# ==========================================
# TESTING CONFIGURATION
# ==========================================

# Test environment variables
TEST_TIMEOUT=30000
JEST_WORKERS=2

# Coverage configuration
COVERAGE_THRESHOLD=80

# ==========================================
# SECURITY SCANNING
# ==========================================

# CodeQL configuration
CODEQL_ACTION_VERSION=v2

# Security audit levels
AUDIT_LEVEL=moderate

# ==========================================
# NOTIFICATION SETTINGS
# ==========================================

# Slack webhook for notifications (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# Discord webhook for notifications (optional)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/yyy

# ==========================================
# DEPLOYMENT CONFIGURATION
# ==========================================

# Environment for deployment testing
DEPLOY_ENVIRONMENT=staging

# Docker registry (if using containerized builds)
# DOCKER_REGISTRY=ghcr.io
# DOCKER_USERNAME=your-username
# DOCKER_PASSWORD=your-token

# ==========================================
# DEBUGGING AND DEVELOPMENT
# ==========================================

# Debug levels
DEBUG=false
VERBOSE=false

# Act-specific debugging
ACT_LOG_LEVEL=info
ACT_RUNNER_DEBUG=false

# ==========================================
# PROJECT-SPECIFIC VARIABLES
# ==========================================

# Voice Terminal specific configuration
VOICE_TERMINAL_ENV=development
VOICE_TERMINAL_API_URL=http://localhost:3000

# Electron specific configuration
ELECTRON_ENV=development
ELECTRON_DISABLE_SECURITY_WARNINGS=true

# Application specific secrets (add your own as needed)
# API_KEY=your-api-key
# DATABASE_URL=your-database-url
# JWT_SECRET=your-jwt-secret