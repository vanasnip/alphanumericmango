#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Comprehensive pre-push hook - runs full CI via act
# This ensures local validation matches CI pipeline before pushing
#
# To bypass in emergencies: git push --no-verify
#
# Features:
# - Full CI test suite via act
# - Build verification
# - Security scanning
# - Performance validation
# - Clear failure feedback

echo "ğŸ” Running comprehensive pre-push validation..."
echo "ğŸ“Š This may take 2-5 minutes depending on changes"
echo "ğŸ’¡ Use 'git push --no-verify' to bypass in emergencies"
echo ""

# Get the remote and branch being pushed to
remote="$1"
url="$2"

# Extract branch from refs
while read local_ref local_sha remote_ref remote_sha; do
    if [ "$local_sha" = "0000000000000000000000000000000000000000" ]; then
        # Branch deletion - allow without checks
        echo "ğŸ—‘ï¸  Branch deletion detected, skipping validation"
        exit 0
    fi
    
    # Get branch name
    branch_name=$(echo "$remote_ref" | sed 's/refs\/heads\///')
    echo "ğŸŒ¿ Validating push to branch: $branch_name"
    break
done

# Run the comprehensive CI script
echo "ğŸš€ Executing full CI pipeline locally..."
if ./scripts/pre-push-ci.sh; then
    echo ""
    echo "âœ… All pre-push validations passed!"
    echo "ğŸ‰ Safe to push to remote repository"
    exit 0
else
    echo ""
    echo "âŒ Pre-push validation failed!"
    echo "ğŸš« Push blocked to prevent CI failures"
    echo ""
    echo "ğŸ”§ To fix:"
    echo "   1. Review the error messages above"
    echo "   2. Fix any failing tests or builds"
    echo "   3. Commit your fixes"
    echo "   4. Try pushing again"
    echo ""
    echo "ğŸ†˜ Emergency bypass:"
    echo "   git push --no-verify"
    echo ""
    exit 1
fi