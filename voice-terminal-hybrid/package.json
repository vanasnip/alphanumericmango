{
  "name": "voice-terminal-hybrid",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite dev",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:visual": "percy exec -- playwright test tests/visual",
    "test:accessibility": "playwright test --grep='@accessibility'",
    "test:performance": "playwright test --grep='@performance'",
    "test:all": "npm run test && npm run test:e2e",
    "test:e2e:system": "playwright test tests/e2e/SystemIntegrationTests.ts",
    "test:e2e:browser": "playwright test tests/e2e/BrowserCompatibilityTests.ts",
    "test:e2e:network": "playwright test tests/e2e/NetworkResilienceTests.ts",
    "test:e2e:multiuser": "playwright test tests/e2e/MultiUserScenarios.ts",
    "test:e2e:recovery": "playwright test tests/e2e/FailureRecoveryTests.ts",
    "test:e2e:critical": "playwright test tests/e2e/SystemIntegrationTests.ts --grep='@critical'",
    "test:e2e:smoke": "playwright test tests/e2e/SystemIntegrationTests.ts --grep='Basic Terminal Operations'",
    "test:e2e:full": "node --loader ts-node/esm tests/e2e/TestRunner.ts --full",
    "test:e2e:report": "node --loader ts-node/esm tests/e2e/TestRunner.ts --report-only",
    "validation:system": "node --loader ts-node/esm tests/e2e/TestRunner.ts",
    "validation:full": "node --loader ts-node/esm tests/e2e/TestRunner.ts --full --parallel",
    "validation:performance": "node --loader ts-node/esm tests/e2e/TestRunner.ts --tags=performance,scalability",
    "validation:reliability": "node --loader ts-node/esm tests/e2e/TestRunner.ts --tags=network,resilience,recovery",
    "validation:ci": "node --loader ts-node/esm tests/e2e/TestRunner.ts --priority=critical --timeout=30000",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:serve": "npx http-server storybook-static",
    "tmux:test": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/tmux/test-runner.ts",
    "tmux:benchmark": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/tmux/test-runner.ts --benchmark",
    "tmux:quick": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/tmux/test-runner.ts --quick",
    "security:test": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/tmux/tests/security/SecurityTestSuite.ts",
    "security:attack-vectors": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/tmux/tests/security/AttackVectorTests.ts",
    "security:penetration": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/tmux/tests/security/PenetrationTests.ts",
    "security:regression": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/tmux/tests/security/RegressionTests.ts",
    "security:all": "npm run security:test && npm run security:attack-vectors && npm run security:penetration && npm run security:regression",
    "security:ci": "npm run security:regression && npm run security:test",
    "security:full": "npm run security:all",
    "security:report": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/tmux/tests/security/SecurityReporter.ts",
    "security:validate": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/tmux/tests/security/SecurityValidator.ts",
    "security:complete": "npm run security:full && npm run security:report && npm run security:validate",
    "precommit:security": "npm run security:regression",
    "predeploy:security": "npm run security:complete",
    "qa:full": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/tmux/tests/run-qa-tests.ts",
    "qa:quick": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/tmux/tests/run-qa-tests.ts --quick",
    "qa:integration": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/tmux/tests/run-qa-tests.ts --integration",
    "qa:concurrency": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/tmux/tests/run-qa-tests.ts --concurrency",
    "qa:regression": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/tmux/tests/run-qa-tests.ts --regression",
    "qa:performance": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/tmux/tests/run-qa-tests.ts --performance",
    "qa:race-conditions": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/tmux/tests/run-qa-tests.ts --race-conditions",
    "qa:report": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/tmux/tests/run-qa-tests.ts --output qa-report.json --format json",
    "qa:phase2": "npm run qa:full -- --output phase2-validation.json --format json",
    "precommit:qa": "npm run qa:quick",
    "predeploy:qa": "npm run qa:phase2",
    "perf:quick": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/performance/index.ts quick",
    "perf:validate": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/performance/index.ts validate",
    "perf:load-test": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/performance/index.ts load-test",
    "perf:optimize": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/performance/index.ts optimize",
    "perf:health": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/performance/index.ts health",
    "perf:demo": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/performance/demo.ts",
    "perf:demo:advanced": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/performance/demo.ts advanced",
    "perf:demo:benchmark": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/performance/demo.ts benchmark",
    "perf:demo:all": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/performance/demo.ts all",
    "perf:benchmark": "node --loader ts-node/esm --experimental-specifier-resolution=node src/lib/tmux/performance/PerformanceBenchmark.ts",
    "perf:enterprise": "npm run perf:optimize && npm run perf:validate && npm run perf:load-test",
    "precommit:perf": "npm run perf:health",
    "predeploy:perf": "npm run perf:enterprise"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@playwright/test": "^1.40.0",
    "@percy/cli": "^1.27.0",
    "@percy/playwright": "^1.0.0",
    "@storybook/addon-a11y": "^8.0.0",
    "@storybook/addon-actions": "^8.0.0",
    "@storybook/addon-backgrounds": "^8.0.0",
    "@storybook/addon-controls": "^8.0.0",
    "@storybook/addon-docs": "^8.0.0",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-svelte-csf": "^4.1.0",
    "@storybook/addon-viewport": "^8.0.0",
    "@storybook/builder-vite": "^8.0.0",
    "@storybook/svelte": "^8.0.0",
    "@storybook/sveltekit": "^8.0.0",
    "@storybook/svelte-vite": "^8.0.0",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/svelte": "^4.0.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "ajv": "^8.12.0",
    "flowbite-svelte": "^0.44.0",
    "jsdom": "^23.0.0",
    "storybook": "^8.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.3",
    "vitest": "^1.0.0"
  }
}