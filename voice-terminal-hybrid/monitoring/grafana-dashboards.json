{
  "dashboard": {
    "id": null,
    "uid": "tmux-service-prod",
    "title": "Tmux Service - Production Monitoring",
    "description": "Comprehensive monitoring dashboard for tmux service with security, performance, and backend health metrics",
    "tags": ["tmux", "voice-terminal", "security", "performance", "production"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "30s",
    "schemaVersion": 39,
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "Security Events Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(security_events_total[1h]))",
            "legendFormat": "Total Events (1h)",
            "refId": "A"
          },
          {
            "expr": "sum(increase(security_events_total{severity=\"critical\"}[1h]))",
            "legendFormat": "Critical Events (1h)",
            "refId": "B"
          },
          {
            "expr": "sum(increase(security_events_total{event_type=\"injection_attempt\"}[1h]))",
            "legendFormat": "Injection Attempts (1h)",
            "refId": "C"
          },
          {
            "expr": "sum(increase(security_events_total{event_type=\"rate_limit_exceeded\"}[1h]))",
            "legendFormat": "Rate Limit Violations (1h)",
            "refId": "D"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "title": "Performance - Response Time Latency",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{service=\"tmux-service\"}[5m])) by (le))",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{service=\"tmux-service\"}[5m])) by (le))",
            "legendFormat": "50th percentile",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{service=\"tmux-service\"}[5m])) by (le))",
            "legendFormat": "99th percentile",
            "refId": "C"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.015},
                {"color": "red", "value": 0.050}
              ]
            }
          }
        },
        "options": {
          "tooltip": {"mode": "multi", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 3,
        "title": "Connection Pool Status",
        "type": "gauge",
        "targets": [
          {
            "expr": "tmux_active_connections / tmux_max_connections * 100",
            "legendFormat": "Pool Utilization %",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 8},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 4,
        "title": "Cache Hit Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "sum(rate(cache_hits_total{service=\"tmux-service\"}[5m])) / sum(rate(cache_requests_total{service=\"tmux-service\"}[5m])) * 100",
            "legendFormat": "Cache Hit Rate %",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 8},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 90},
                {"color": "green", "value": 95}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 5,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{service=\"tmux-service\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{service=\"tmux-service\"}[5m])) * 100",
            "legendFormat": "5xx Error Rate %",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_requests_total{service=\"tmux-service\",status=~\"4..\"}[5m])) / sum(rate(http_requests_total{service=\"tmux-service\"}[5m])) * 100",
            "legendFormat": "4xx Error Rate %",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 8},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 6,
        "title": "Resource Utilization",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{container=\"tmux-service\"}[5m]) * 100",
            "legendFormat": "CPU %",
            "refId": "A"
          },
          {
            "expr": "container_memory_usage_bytes{container=\"tmux-service\"} / container_spec_memory_limit_bytes{container=\"tmux-service\"} * 100",
            "legendFormat": "Memory %",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 8},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 85}
              ]
            }
          }
        },
        "options": {
          "tooltip": {"mode": "multi", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 7,
        "title": "Security Events Timeline",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum by (event_type) (increase(security_events_total[1m]))",
            "legendFormat": "{{event_type}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "options": {
          "tooltip": {"mode": "multi", "sort": "desc"},
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "max", "min"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": {"type": "linear"}
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Backend Health - Connection Status",
        "type": "timeseries",
        "targets": [
          {
            "expr": "tmux_active_connections",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "tmux_healthy_connections",
            "legendFormat": "Healthy Connections",
            "refId": "B"
          },
          {
            "expr": "tmux_max_connections",
            "legendFormat": "Max Connections",
            "refId": "C"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 7},
                {"color": "red", "value": 9}
              ]
            }
          }
        },
        "options": {
          "tooltip": {"mode": "multi", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 9,
        "title": "Request Rate and Volume",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{service=\"tmux-service\"}[5m]))",
            "legendFormat": "Requests/sec",
            "refId": "A"
          },
          {
            "expr": "sum(rate(tmux_commands_total[5m]))",
            "legendFormat": "Tmux Commands/sec",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 200}
              ]
            }
          }
        },
        "options": {
          "tooltip": {"mode": "multi", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 10,
        "title": "Active Sessions Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (session_type) (tmux_sessions_by_type)",
            "legendFormat": "{{session_type}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 32},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "pieType": "pie",
          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "right"},
          "displayLabels": ["name", "value"]
        }
      },
      {
        "id": 11,
        "title": "Security Risk Score Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum by (le) (increase(security_events_risk_score_bucket[5m]))",
            "legendFormat": "{{le}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 32},
        "options": {
          "calculate": false,
          "cellGap": 2,
          "cellValues": {},
          "color": {
            "exponent": 0.5,
            "fill": "dark-orange",
            "mode": "spectrum",
            "reverse": false,
            "scale": "exponential",
            "scheme": "Spectral",
            "steps": 64
          },
          "exemplars": {"color": "rgba(255,0,255,0.7)"},
          "filterValues": {"le": 1e-9},
          "legend": {"show": false},
          "rowsFrame": {"layout": "auto"},
          "tooltip": {"show": true, "yHistogram": false},
          "yAxis": {
            "axisPlacement": "left",
            "reverse": false,
            "unit": "short"
          }
        }
      },
      {
        "id": 12,
        "title": "Top Security Events (Last Hour)",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (event_type, severity) (increase(security_events_total[1h])))",
            "legendFormat": "",
            "refId": "A",
            "format": "table"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 32},
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto",
              "inspect": false
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Value"},
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "steps": [
                      {"color": "green", "value": null},
                      {"color": "yellow", "value": 5},
                      {"color": "red", "value": 20}
                    ]
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "id": 13,
        "title": "Pod Status and Restarts",
        "type": "stat",
        "targets": [
          {
            "expr": "kube_pod_status_phase{pod=~\"tmux-service-.*\", phase=\"Running\"}",
            "legendFormat": "Running Pods",
            "refId": "A"
          },
          {
            "expr": "sum(increase(kube_pod_container_status_restarts_total{pod=~\"tmux-service-.*\"}[1h]))",
            "legendFormat": "Restarts (1h)",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 4, "w": 12, "x": 0, "y": 40},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 14,
        "title": "Network I/O",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(container_network_receive_bytes_total{pod=~\"tmux-service-.*\"}[5m]))",
            "legendFormat": "Receive bytes/sec",
            "refId": "A"
          },
          {
            "expr": "sum(rate(container_network_transmit_bytes_total{pod=~\"tmux-service-.*\"}[5m]))",
            "legendFormat": "Transmit bytes/sec",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 4, "w": 12, "x": 12, "y": 40},
        "fieldConfig": {
          "defaults": {
            "unit": "binBps"
          }
        },
        "options": {
          "tooltip": {"mode": "multi", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "cluster",
          "type": "query",
          "query": "label_values(up, cluster)",
          "current": {
            "selected": false,
            "text": "production",
            "value": "production"
          },
          "hide": 0,
          "includeAll": false,
          "multi": false,
          "options": [],
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 0
        },
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(kube_pod_info{cluster=\"$cluster\"}, namespace)",
          "current": {
            "selected": false,
            "text": "voice-terminal",
            "value": "voice-terminal"
          },
          "hide": 0,
          "includeAll": false,
          "multi": false,
          "options": [],
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 0
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": {
            "type": "grafana",
            "uid": "-- Grafana --"
          },
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "enable": true,
          "expr": "ALERTS{alertname=~\".*Tmux.*\", severity=\"critical\"}",
          "iconColor": "red",
          "name": "Critical Alerts",
          "titleFormat": "{{alertname}}: {{summary}}"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "enable": true,
          "expr": "changes(kube_deployment_status_replicas{deployment=\"tmux-service\"}[1h]) > 0",
          "iconColor": "blue",
          "name": "Deployments",
          "titleFormat": "Deployment: {{deployment}}"
        }
      ]
    },
    "links": [
      {
        "asDropdown": false,
        "icon": "external link",
        "includeVars": false,
        "keepTime": false,
        "tags": ["voice-terminal"],
        "targetBlank": true,
        "title": "Voice Terminal Dashboards",
        "tooltip": "",
        "type": "dashboards",
        "url": ""
      },
      {
        "asDropdown": false,
        "icon": "doc",
        "includeVars": false,
        "keepTime": false,
        "tags": [],
        "targetBlank": true,
        "title": "Runbooks",
        "tooltip": "Operational runbooks",
        "type": "link",
        "url": "https://runbooks.voice-terminal.io/tmux-service"
      }
    ]
  }
}