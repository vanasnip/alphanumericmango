{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Voice Terminal Hybrid Theme Schema",
  "description": "Complete theme configuration schema for voice-terminal-hybrid project",
  "type": "object",
  "properties": {
    "theme": {
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["dark", "light", "auto"],
          "description": "Theme mode preference"
        },
        "preset": {
          "type": "string",
          "enum": ["default", "ocean", "forest", "high-contrast"],
          "description": "Theme preset name"
        },
        "global": {
          "type": "object",
          "properties": {
            "colors": {
              "type": "object",
              "properties": {
                "primary": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"},
                "primaryRgb": {"type": "string", "pattern": "^\\d{1,3}, \\d{1,3}, \\d{1,3}$"},
                "secondary": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"},
                "secondaryRgb": {"type": "string", "pattern": "^\\d{1,3}, \\d{1,3}, \\d{1,3}$"},
                "success": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"},
                "successRgb": {"type": "string", "pattern": "^\\d{1,3}, \\d{1,3}, \\d{1,3}$"},
                "warning": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"},
                "warningRgb": {"type": "string", "pattern": "^\\d{1,3}, \\d{1,3}, \\d{1,3}$"},
                "error": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"},
                "errorRgb": {"type": "string", "pattern": "^\\d{1,3}, \\d{1,3}, \\d{1,3}$"},
                "info": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"},
                "infoRgb": {"type": "string", "pattern": "^\\d{1,3}, \\d{1,3}, \\d{1,3}$"},
                "background": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"},
                "backgroundRgb": {"type": "string", "pattern": "^\\d{1,3}, \\d{1,3}, \\d{1,3}$"},
                "surface": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"},
                "surfaceRgb": {"type": "string", "pattern": "^\\d{1,3}, \\d{1,3}, \\d{1,3}$"},
                "surfaceSecondary": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"},
                "surfaceSecondaryRgb": {"type": "string", "pattern": "^\\d{1,3}, \\d{1,3}, \\d{1,3}$"},
                "surfaceHover": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"},
                "surfaceHoverRgb": {"type": "string", "pattern": "^\\d{1,3}, \\d{1,3}, \\d{1,3}$"},
                "text": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"},
                "textRgb": {"type": "string", "pattern": "^\\d{1,3}, \\d{1,3}, \\d{1,3}$"},
                "textSecondary": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"},
                "textSecondaryRgb": {"type": "string", "pattern": "^\\d{1,3}, \\d{1,3}, \\d{1,3}$"},
                "textMuted": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"},
                "textMutedRgb": {"type": "string", "pattern": "^\\d{1,3}, \\d{1,3}, \\d{1,3}$"},
                "textInverse": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"},
                "textInverseRgb": {"type": "string", "pattern": "^\\d{1,3}, \\d{1,3}, \\d{1,3}$"},
                "border": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"},
                "borderRgb": {"type": "string", "pattern": "^\\d{1,3}, \\d{1,3}, \\d{1,3}$"},
                "borderLight": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"},
                "borderLightRgb": {"type": "string", "pattern": "^\\d{1,3}, \\d{1,3}, \\d{1,3}$"},
                "outline": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"},
                "outlineRgb": {"type": "string", "pattern": "^\\d{1,3}, \\d{1,3}, \\d{1,3}$"},
                "accent": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"},
                "accentRgb": {"type": "string", "pattern": "^\\d{1,3}, \\d{1,3}, \\d{1,3}$"},
                "accentDark": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"},
                "accentDarkRgb": {"type": "string", "pattern": "^\\d{1,3}, \\d{1,3}, \\d{1,3}$"}
              },
              "required": ["primary", "secondary", "background", "surface", "text", "accent"],
              "additionalProperties": false
            },
            "typography": {
              "type": "object",
              "properties": {
                "fontFamily": {"type": "string"},
                "fontFamilyMono": {"type": "string"},
                "fontSize": {
                  "type": "object",
                  "properties": {
                    "xs": {"type": "string"},
                    "sm": {"type": "string"},
                    "base": {"type": "string"},
                    "lg": {"type": "string"},
                    "xl": {"type": "string"},
                    "2xl": {"type": "string"},
                    "3xl": {"type": "string"}
                  }
                },
                "fontWeight": {
                  "type": "object",
                  "properties": {
                    "normal": {"type": "string"},
                    "medium": {"type": "string"},
                    "semibold": {"type": "string"},
                    "bold": {"type": "string"}
                  }
                },
                "lineHeight": {
                  "type": "object",
                  "properties": {
                    "tight": {"type": "number"},
                    "normal": {"type": "number"},
                    "relaxed": {"type": "number"}
                  }
                }
              }
            },
            "spacing": {
              "type": "object",
              "properties": {
                "unit": {"type": "string"},
                "scale": {
                  "type": "object",
                  "patternProperties": {
                    "^(0|[1-9]\\d*)$": {"type": "string"}
                  }
                }
              }
            },
            "borders": {
              "type": "object",
              "properties": {
                "radius": {
                  "type": "object",
                  "properties": {
                    "none": {"type": "string"},
                    "sm": {"type": "string"},
                    "md": {"type": "string"},
                    "lg": {"type": "string"},
                    "xl": {"type": "string"},
                    "full": {"type": "string"}
                  }
                },
                "width": {
                  "type": "object",
                  "properties": {
                    "none": {"type": "string"},
                    "thin": {"type": "string"},
                    "thick": {"type": "string"}
                  }
                }
              }
            },
            "shadows": {
              "type": "object",
              "properties": {
                "sm": {"type": "string"},
                "md": {"type": "string"},
                "lg": {"type": "string"},
                "xl": {"type": "string"},
                "glow": {"type": "string"}
              }
            }
          }
        },
        "components": {
          "type": "object",
          "properties": {
            "terminal": {
              "type": "object",
              "properties": {
                "inherit": {"type": "boolean"},
                "overrides": {
                  "type": "object",
                  "properties": {
                    "fontFamily": {"type": "string"},
                    "fontSize": {"type": "string"},
                    "lineHeight": {"type": "number"},
                    "padding": {"type": "string"},
                    "background": {"type": "string"},
                    "borderRadius": {"type": "string"}
                  }
                }
              }
            },
            "voiceIndicator": {
              "type": "object",
              "properties": {
                "inherit": {"type": "boolean"},
                "overrides": {
                  "type": "object",
                  "properties": {
                    "size": {"type": "string"},
                    "borderWidth": {"type": "string"},
                    "borderRadius": {"type": "string"},
                    "transition": {"type": "string"},
                    "fontSize": {"type": "string"}
                  }
                }
              }
            },
            "settingsPanel": {
              "type": "object",
              "properties": {
                "inherit": {"type": "boolean"},
                "overrides": {
                  "type": "object",
                  "properties": {
                    "borderRadius": {"type": "string"},
                    "padding": {"type": "string"},
                    "boxShadow": {"type": "string"},
                    "backdrop": {"type": "string"}
                  }
                }
              }
            },
            "navigation": {
              "type": "object",
              "properties": {
                "inherit": {"type": "boolean"},
                "overrides": {
                  "type": "object",
                  "properties": {
                    "borderRadius": {"type": "string"},
                    "padding": {"type": "string"},
                    "backdropFilter": {"type": "string"}
                  }
                }
              }
            },
            "projectTabs": {
              "type": "object",
              "properties": {
                "inherit": {"type": "boolean"},
                "overrides": {
                  "type": "object",
                  "properties": {
                    "borderRadius": {"type": "string"},
                    "padding": {"type": "string"},
                    "fontWeight": {"type": "string"},
                    "transition": {"type": "string"}
                  }
                }
              }
            },
            "formControls": {
              "type": "object",
              "properties": {
                "inherit": {"type": "boolean"},
                "overrides": {
                  "type": "object",
                  "properties": {
                    "borderRadius": {"type": "string"},
                    "padding": {"type": "string"},
                    "borderWidth": {"type": "string"},
                    "transition": {"type": "string"},
                    "fontSize": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      },
      "required": ["mode", "preset", "global"],
      "additionalProperties": false
    }
  },
  "required": ["theme"],
  "additionalProperties": false,
  "examples": [
    {
      "theme": {
        "mode": "dark",
        "preset": "ocean",
        "global": {
          "colors": {
            "primary": "#0EA5E9",
            "primaryRgb": "14, 165, 233",
            "secondary": "#06B6D4",
            "secondaryRgb": "6, 182, 212",
            "success": "#14B8A6",
            "successRgb": "20, 184, 166",
            "warning": "#F59E0B",
            "warningRgb": "245, 158, 11",
            "error": "#F97316",
            "errorRgb": "249, 115, 22",
            "info": "#67E8F9",
            "infoRgb": "103, 232, 249",
            "background": "#0C1B1F",
            "backgroundRgb": "12, 27, 31",
            "surface": "#164E63",
            "surfaceRgb": "22, 78, 99",
            "surfaceSecondary": "#0E7490",
            "surfaceSecondaryRgb": "14, 116, 144",
            "surfaceHover": "#155E75",
            "surfaceHoverRgb": "21, 94, 117",
            "text": "#F0F9FF",
            "textRgb": "240, 249, 255",
            "textSecondary": "#A5F3FC",
            "textSecondaryRgb": "165, 243, 252",
            "textMuted": "#67E8F9",
            "textMutedRgb": "103, 232, 249",
            "textInverse": "#164E63",
            "textInverseRgb": "22, 78, 99",
            "border": "#0E7490",
            "borderRgb": "14, 116, 144",
            "borderLight": "#155E75",
            "borderLightRgb": "21, 94, 117",
            "outline": "#0EA5E9",
            "outlineRgb": "14, 165, 233",
            "accent": "#00FFFF",
            "accentRgb": "0, 255, 255",
            "accentDark": "#00E6E6",
            "accentDarkRgb": "0, 230, 230"
          },
          "typography": {
            "fontFamily": "Inter, system-ui, sans-serif",
            "fontFamilyMono": "JetBrains Mono, Monaco, monospace",
            "fontSize": {
              "xs": "0.75rem",
              "sm": "0.875rem",
              "base": "1rem",
              "lg": "1.125rem",
              "xl": "1.25rem",
              "2xl": "1.5rem",
              "3xl": "1.875rem"
            },
            "fontWeight": {
              "normal": "400",
              "medium": "500",
              "semibold": "600",
              "bold": "700"
            },
            "lineHeight": {
              "tight": 1.25,
              "normal": 1.5,
              "relaxed": 1.75
            }
          },
          "spacing": {
            "unit": "0.25rem",
            "scale": {
              "0": "0",
              "1": "0.25rem",
              "2": "0.5rem",
              "3": "0.75rem",
              "4": "1rem",
              "5": "1.25rem",
              "6": "1.5rem",
              "8": "2rem",
              "10": "2.5rem",
              "12": "3rem",
              "16": "4rem",
              "20": "5rem",
              "24": "6rem"
            }
          },
          "borders": {
            "radius": {
              "none": "0",
              "sm": "0.125rem",
              "md": "0.375rem",
              "lg": "0.5rem",
              "xl": "0.75rem",
              "full": "9999px"
            },
            "width": {
              "none": "0",
              "thin": "1px",
              "thick": "2px"
            }
          },
          "shadows": {
            "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
            "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
            "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
            "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)",
            "glow": "0 0 20px rgb(14, 165, 233 / 0.3)"
          }
        },
        "components": {
          "terminal": {
            "inherit": false,
            "overrides": {
              "fontFamily": "JetBrains Mono, Monaco, monospace",
              "fontSize": "14px",
              "lineHeight": 1.5,
              "padding": "1rem",
              "background": "#000000",
              "borderRadius": "0"
            }
          },
          "voiceIndicator": {
            "inherit": true,
            "overrides": {
              "size": "50px",
              "borderWidth": "2px",
              "borderRadius": "50%",
              "transition": "all 0.3s ease",
              "fontSize": "1.2rem"
            }
          }
        }
      }
    }
  ]
}